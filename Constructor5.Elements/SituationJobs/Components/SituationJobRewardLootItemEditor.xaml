<UserControl
    x:Class="Constructor5.Elements.SituationJobs.Components.SituationJobRewardLootItemEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Constructor5.Elements.SituationJobs.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <c:CheckBox Content="RunWhenSituationEndsAtGold" IsChecked="{Binding RunOnGold}" />
        <c:CheckBox Content="RunWhenSituationEndsAtSilver" IsChecked="{Binding RunOnSilver}" />
        <c:CheckBox Content="RunWhenSituationEndsAtBronze" IsChecked="{Binding RunOnBronze}" />
        <c:CheckBox Content="RunWhenSituationEndsWithNoMedal" IsChecked="{Binding RunOnNoMedal}" />
        <c:Field Label="TargetSimJob" LabelWidth="150">
            <c:ReferenceControl ElementTypeName="SituationJob" Reference="{Binding TargetSimJob}" />
        </c:Field>
        <c:CheckBox Content="SituationJobLootTargetRandom" IsChecked="{Binding TargetRandom}" />
    </StackPanel>
</UserControl>
