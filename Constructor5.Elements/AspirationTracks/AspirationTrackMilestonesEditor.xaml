<UserControl x:Class="Constructor5.Elements.AspirationTracks.AspirationTrackMilestonesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.Elements.AspirationTracks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shared="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="{StaticResource Constructor.BigPaddingMinusTop}">
            <shared:ReferenceListControl CreateElementFunction="ReferenceListControl_CreateElementFunction"
                                         EditorCategory="Default"
                                         ElementReferenceList="{Binding Milestones}"
                                         ElementTypeName="Milestones"
                                         Limit="4"
                                         ShowBrowseButton="False"
                                         ShowCreateButton="True" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
