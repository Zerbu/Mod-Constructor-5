<UserControl
    x:Class="Constructor5.Elements.DramaNodes.Components.DramaNodeInfoEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Constructor5.Elements.DramaNodes.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <c:Field Label="MinHoursToStart" LabelWidth="125">
            <xctk:DoubleUpDown Text="{Binding MinHoursToStart}" />
        </c:Field>
        <c:Field Label="MaxHoursToStart" LabelWidth="125">
            <xctk:DoubleUpDown Text="{Binding MaxHoursToStart}" />
        </c:Field>
    </StackPanel>
</UserControl>
