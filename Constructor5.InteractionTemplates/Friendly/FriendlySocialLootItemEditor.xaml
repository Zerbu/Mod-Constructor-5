<UserControl x:Class="Constructor5.InteractionTemplates.Friendly.FriendlySocialLootItemEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:Constructor5.UI.Shared;assembly=Constructor5.UI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Constructor5.InteractionTemplates.Friendly"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <StackPanel>
        <c:CheckBox Content="Run when the interaction greatly succeeds" IsChecked="{Binding RunOnGreatSuccess}" />
        <c:CheckBox Content="Run when the interaction succeeds normally" IsChecked="{Binding RunOnSuccess}" />
        <c:CheckBox Content="Run when the interaction fails normally" IsChecked="{Binding RunOnFailure}" />
        <c:CheckBox Content="Run when the interaction fails horribly" IsChecked="{Binding RunOnHorribleFailure}" />
        <c:CheckBox IsChecked="{Binding RunOnSocialContextFailure}">
            <c:TextBlock Text="Run when the interaction fails due to social context (EA considers this the worst type of failure)" />
        </c:CheckBox>
    </StackPanel>
</UserControl>
